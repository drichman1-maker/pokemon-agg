# Application
PROJECT_NAME="Stateless Infra API"
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-min-32-chars

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/stateless_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# SendGrid (Optional)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# Affiliate System
AFFILIATE_SALT=your-random-salt-here-change-in-production
